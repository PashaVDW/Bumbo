@{
    ViewBag.Title = "Terugblik - Weekoverzicht";
}

@model bumbo.Models.WeekOverview

<div class="container">
    <h1>Terugblik</h1>
    <h2>Week @Model.weekNumber</h2>

    <div class="week-overview">
        <button class="arrow-btn"><</button>
        @foreach (var day in Model.days)
        {
            <div class="day-column">
                <p>@day.dayName</p>
                <p>Aantal klanten</p>
                <div class="data-box">@day.customerAmount</div>
                <p>Aantal coli's</p>
                <div class="data-box">@day.packagesAmount</div>
            </div>
        }
        <button class="arrow-btn">></button>
    </div>
</div>

<style>
    .container {
        text-align: center;
        font-family: Arial, sans-serif;
    }

    .week-overview {
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .day-column {
        margin: 0 10px;
        text-align: center;
    }

    .data-box {
        border: 1px solid #ddd;
        padding: 10px;
        border-radius: 5px;
        width: 50px;
        margin: 5px auto;
    }

    .arrow-btn {
        background-color: transparent;
        border: none;
        font-size: 24px;
        cursor: pointer;
    }
</style>
