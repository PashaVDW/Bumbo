@{
    ViewData["Title"] = "Delete Modal";
}

<h1>Delete Modal</h1>
<hr />

<!-- Button to toggle modal -->
<button id="openModal" class="text-white bg-blue-700 px-5 py-2.5 block rounded-lg text-center text-sm font-medium hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800" type="button">
    Toggle Modal
</button>

<!-- Modal structure -->
<div id="popup-modal" tabindex="-1" class="top-0 right-0 left-0 h-[calc(100%-1rem)] fixed z-50 hidden max-h-full w-full items-center justify-center overflow-y-auto overflow-x-hidden bg-gray-800 bg-opacity-50 md:inset-0">
    <div class="p-4 relative max-h-full w-full max-w-md">
        <div class="bg-white relative rounded-lg shadow dark:bg-gray-700">
            <!-- Close button -->
            <button id="closeModal" class="top-3 end-2.5 text-gray-400 bg-transparent w-8 h-8 absolute ms-auto inline-flex items-center justify-center rounded-lg text-sm hover:bg-gray-200 hover:text-gray-900 dark:hover:bg-gray-600 dark:hover:text-white">
                <svg class="w-3 h-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 14">
                    <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6" />
                </svg>
                <span class="sr-only">Close modal</span>
            </button>

            <!-- Modal content -->
            <div class="p-4 text-center md:p-5">
                <svg class="mb-4 text-gray-400 w-12 h-12 mx-auto dark:text-gray-200" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 20 20">
                    <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 11V6m0 8h.01M19 10a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z" />
                </svg>
                <h3 class="mb-5 text-gray-500 text-lg font-normal dark:text-gray-400">Are you sure you want to delete this product?</h3>
                <button id="confirmDelete" type="button" class="text-white bg-red-600 px-5 py-2.5 inline-flex items-center rounded-lg text-center text-sm font-medium hover:bg-red-800 focus:ring-4 focus:outline-none focus:ring-red-300 dark:focus:ring-red-800">
                    Yes, I'm sure
                </button>
                <button id="closeModal2" type="button" class="py-2.5 px-5 ms-3 text-gray-900 bg-white border-gray-200 rounded-lg border text-sm font-medium hover:bg-gray-100 hover:text-blue-700 focus:outline-none focus:z-10 focus:ring-4 focus:ring-gray-100 dark:bg-gray-800 dark:text-gray-400 dark:border-gray-600 dark:focus:ring-gray-700 dark:hover:text-white dark:hover:bg-gray-700">No, cancel</button>
            </div>
        </div>
    </div>
</div>

<!-- JavaScript for handling modal toggle -->
<script>
    // Get modal and button elements
    const modal = document.getElementById('popup-modal');
    const openModalButton = document.getElementById('openModal');
    const closeModalButtons = document.querySelectorAll('#closeModal, #closeModal2');

    // Open modal when button is clicked
    openModalButton.addEventListener('click', () => {
        modal.classList.remove('hidden'); // Show modal by removing the 'hidden' class
    });

    // Close modal when any close button is clicked
    closeModalButtons.forEach(button => {
        button.addEventListener('click', () => {
            modal.classList.add('hidden'); // Hide modal by adding the 'hidden' class
        });
    });

    // Optionally, close modal if clicking outside the modal content (optional)
    window.addEventListener('click', (event) => {
        if (event.target === modal) {
            modal.classList.add('hidden'); // Hide modal when clicking outside the content
        }
    });
</script>


