@using Microsoft.AspNetCore.Mvc.Localization
@using Microsoft.Extensions.Localization
@using bumbo.ViewModels

@model LoginViewModel

@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["LoginTitle"];
    Layout = "_Layout";
    ViewData["HideLayoutElements"] = true;
}

<div class="min-h-screen flex items-center justify-center bg-gray-100">
    <div class="w-full max-w-sm bg-white shadow-md rounded-lg p-8">
        <!-- Logo -->
        <div class="flex justify-center mb-4">
            <img src="/media/bumbo-logo.png" alt="icon" class="w-24 h-auto">
        </div>

        <!-- Page Title -->
        <h2 class="text-2xl font-semibold text-center text-gray-800 mb-6">@Localizer["LoginTitle"]</h2>

        <!-- Login Form -->
        <form asp-action="Login" method="post" class="space-y-4">
            <div>
                <input asp-for="Email" class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-gray-400 bg-gray-100 text-gray-900 placeholder-gray-500" placeholder="@Localizer["EmailPlaceholder"]" />
                <span asp-validation-for="Email" class="text-red-500 text-sm"></span>
            </div>

            <div>
                <input asp-for="Password" type="password" class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-gray-400 bg-gray-100 text-gray-900 placeholder-gray-500" placeholder="@Localizer["PasswordPlaceholder"]" />
                <span asp-validation-for="Password" class="text-red-500 text-sm"></span>
            </div>

            <div class="flex justify-between items-center">
                <div class="flex items-center">
                    <input asp-for="RememberMe" class="h-4 w-4 text-gray-800 focus:ring-gray-400 border-gray-300 rounded mr-2" />
                    <label asp-for="RememberMe" class="text-sm text-gray-600">@Localizer["RememberMe"]</label>
                </div>
            </div>

            <div>
                <button type="submit" class="w-full bg-gray-600 text-white rounded-lg py-2 text-center font-medium hover:bg-gray-700 focus:ring-2 focus:ring-gray-400 focus:ring-opacity-50">
                    @Localizer["LoginButton"]
                </button>
            </div>
        </form>
    </div>
</div>
