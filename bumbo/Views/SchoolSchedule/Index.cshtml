@model SchoolScheduleViewModel

<!--localhost:7135/schoolRoster-->

<div class="max-w-4xl mx-auto p-4">
    <div class="text-center">
        <h1 class="text-3xl font-bold mb-2">Schoolrooster</h1>
        <h2 class="text-lg text-gray-600">@Model.Month @Model.Year - Week @Model.Week</h2>
    </div>

    <form id="weekForm" method="get" class="flex items-center justify-center gap-4 mt-6 mb-8">
        <p>Filter op week / jaar</p>
        <input type="number" id="weekInput" name="weekNumber" placeholder="Week" class="w-24 border border-gray-300 rounded-md py-2 px-4 focus:outline-none focus:ring-2 focus:ring-yellow-500" />
        <input type="number" id="yearInput" name="yearNumber" placeholder="Jaar" class="w-28 border border-gray-300 rounded-md py-2 px-4 focus:outline-none focus:ring-2 focus:ring-yellow-500" />
        <button type="submit" class="bg-gray-700 text-white py-2 px-4 rounded-md hover:bg-gray-800">Filter</button>
    </form>

    <div class="flex justify-between items-center mb-6">
        <button onclick="window.location.href='@Url.Action("Index", new { weekNumber = Model.Week - 1, yearNumber = Model.Year })';" class="bg-gray-600 hover:bg-gray-500 text-white font-semibold py-2 px-6 rounded-xl">
            Vorige week
        </button>
        @if (Model.Edit)
        {
            <button onclick="window.location.href='@Url.Action("update", new { weekNumber = Model.Week, yearNumber = Model.Year })';" class="bg-gray-600 hover:bg-gray-500 text-white font-semibold py-2 px-6 rounded-xl">
                Schoolrooster bewerken
            </button>
        }
        else
        {
            <button onclick="window.location.href='@Url.Action("Create", new { weekNumber = Model.Week, yearNumber = Model.Year })';" class="bg-gray-600 hover:bg-gray-500 text-white font-semibold py-2 px-6 rounded-xl">
                Schoolrooster aanmaken
            </button>
        }
        <button onclick="window.location.href='@Url.Action("Index", new { weekNumber = Model.Week + 1, yearNumber = Model.Year })';" class="bg-gray-600 hover:bg-gray-500 text-white font-semibold py-2 px-6 rounded-xl">
            Volgende week
        </button>
    </div>

    @if (TempData["Error"] != null)
    {
        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-6">
            @TempData["Error"]
        </div>
    }

    <table class="w-full text-left border-collapse border border-gray-200">
        <thead class="bg-gray-100 text-gray-700">
            <tr>
                <th class="border border-gray-300 px-4 py-2">Dag</th>
                <th class="border border-gray-300 px-4 py-2">Datum</th>
                <th class="border border-gray-300 px-4 py-2">Status</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var day in Model.Days)
            {
                <tr class="hover:bg-gray-50">
                    <td class="border border-gray-300 px-4 py-2">@day.DayName</td>
                    <td class="border border-gray-300 px-4 py-2">@day.Date.ToString("dd-MM-yyyy")</td>
                    <td class="border border-gray-300 px-4 py-2">@day.Status</td>
                </tr>
            }
        </tbody>
    </table>
</div>