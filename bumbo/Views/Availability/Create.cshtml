@model AvailabilityInputViewModel

<div class="px-2 mx-auto flex max-w-4xl flex-col items-center">
    <h1>Beschikbaarheid invoeren</h1>
    <h2>Beschikbaarheid toepassen voor de geselecteerde periode</h2>

    @if (ViewBag.Errors != null && ViewBag.Errors.Count > 0)
    {
        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-4">
            <ul>
                @foreach (var error in ViewBag.Errors)
                {
                    <li>@error</li>
                }
            </ul>
        </div>
    }

    <form asp-action="Create" method="post" class="space-y-4">
        <div class="flex space-x-4">
            <div>
                <label for="StartWeek" class="block font-medium">Beginweek</label>
                <input type="number" asp-for="StartWeek" max="53" class="border rounded px-2 py-1 w-24" />
            </div>
            <div>
                <label for="StartYear" class="block font-medium">Beginjaar</label>
                <input type="number" asp-for="StartYear" class="border rounded px-2 py-1 w-24" />
            </div>
        </div>

        <div class="flex space-x-4">
            <div>
                <label for="EndWeek" class="block font-medium">Eindweek</label>
                <input type="number" asp-for="EndWeek" max="53" class="border rounded px-2 py-1 w-24" />
            </div>
            <div>
                <label for="EndYear" class="block font-medium">Eindjaar</label>
                <input type="number" asp-for="EndYear" class="border rounded px-2 py-1 w-24" />
            </div>
        </div>

        <table class="table mt-4">
            <thead>
                <tr>
                    <th>Dag</th>
                    <th>Starttijd</th>
                    <th>Eindtijd</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.Days.Count; i++)
                {
                    <tr>
                        <td>@Model.Days[i].DayName</td>
                        <input type="hidden" asp-for="Days[i].DayName" value="@Model.Days[i].DayName" class="border rounded px-2 py-1" />
                        <td>
                            <input type="time" asp-for="Days[i].StartTime" class="border rounded px-2 py-1" />
                        </td>
                        <td>
                            <input type="time" asp-for="Days[i].EndTime" class="border rounded px-2 py-1" />
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <button type="submit" class="bg-blue-500 hover:bg-blue-600 text-white py-2 px-6 rounded">Opslaan</button>
    </form>
</div>

