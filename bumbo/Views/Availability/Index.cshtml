@model AvailabilityWeekView

<!--localhost:7135/Availability-->

<div class="px-2 mx-auto flex max-w-4xl flex-col items-center">
    <h1 class="mt-8 text-2xl">Beschikbaarheid</h1>
    <h2>Beschikbaarheid voor week @Model.Week van @Model.Month @Model.Year</h2>

    <form id="weekForm" method="get" class="flex items-center space-x-4 mt-4 mb-4">
        <input type="number" id="weekInput" name="weekNumber" placeholder="Week" class="w-full border border-gray-300 rounded-full py-2 px-6 focus:outline-none focus:ring-2 focus:ring-yellow-400" />
        <input type="number" id="yearInput" name="yearNumber" placeholder="Jaar" class="w-full border border-gray-300 rounded-full py-2 px-6 focus:outline-none focus:ring-2 focus:ring-yellow-400" />
        <button type="submit" class="bg-gray-200 text-gray-700 py-2 px-6 rounded-full hover:bg-gray-300">Zoeken</button>
    </form>

    <div class="flex w-full items-center justify-between mt-4 mb-4">
        <button onclick="window.location.href='@Url.Action("Index", new { weekNumber = Model.Week - 1, yearNumber = Model.Year })';" class="bg-gray-600 hover:bg-gray-500 text-white font-semibold py-2 px-6 rounded-xl">
            Vorige week
        </button>
        <button onclick="window.location.href='@Url.Action("Create", new { weekNumber = Model.Week, yearNumber = Model.Year })';" class="bg-gray-600 hover:bg-gray-500 text-white font-semibold py-2 px-6 rounded-xl">
            Beschikbaarheid aanmaken
        </button>
        <button onclick="window.location.href='@Url.Action("Index", new { weekNumber = Model.Week + 1, yearNumber = Model.Year })';" class="bg-gray-600 hover:bg-gray-500 text-white font-semibold py-2 px-6 rounded-xl">
            Volgende week
        </button>
    </div>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">
            @TempData["Error"]
        </div>
    }

    <table class="table">
        <thead>
            <tr>
                <th>Dag</th>
                <th>Datum</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var day in Model.Days)
            {
                <tr>
                    <td>@day.DayName</td>
                    <td>@day.Date.ToString("dd-MM-yyyy")</td>
                    <td>@day.Status</td>
                </tr>
            }
        </tbody>
    </table>
</div>