@model UpdateRegisteredHoursViewModel

@{
    ViewData["Title"] = "Geregistreerde uren bewerken";
    Layout = "_Layout";
}

<div class="max-w-4xl mx-auto bg-white p-6 rounded-md">
    <div class="flex items-center mb-6">
        <button onclick="history.back()" class="mr-4">
            <svg width="19" height="38" viewBox="0 0 19 38" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M17.2502 35.5L3.66687 21.9167C2.0627 20.3125 2.0627 17.6875 3.66687 16.0833L17.2502 2.5"
                      stroke="black" stroke-width="3.125" stroke-miterlimit="10"
                      stroke-linecap="round" stroke-linejoin="round" />
            </svg>
        </button>
        <h1 class="text-2xl font-bold">Overzicht gewerkte uren - Corrigeren</h1>
    </div>

    <div class="flex gap-8">
        <div class="w-1/3 bg-gray-100 p-4 rounded-md">
            <h2 class="font-semibold text-lg mb-4">Planning</h2>
            <p class="text-sm text-gray-700 mb-2"><strong>Datum:</strong> @Model.Date.ToString("dd-MM-yyyy")</p>

            <div class="mb-4">
                <p class="font-semibold text-gray-700 mb-2">Geplande uren:</p>
                <div class="p-3 bg-white rounded-md border">
                    <p class="font-medium text-gray-800">@Model.EmployeeName</p>
                    <p class="text-gray-700">@Model.ScheduledDepartment</p>
                    <p class="text-gray-700">
                        @Model.ScheduledStartTime.ToString("HH:mm") - @Model.ScheduledEndTime.ToString("HH:mm")
                    </p>
                </div>
            </div>

            <div class="mb-4">
                <p class="font-semibold text-gray-700 mb-2">Origineel geklokte uren:</p>
                <div class="p-3 bg-white rounded-md border">
                    <p class="font-medium text-gray-800">@Model.EmployeeName</p>
                    <p class="text-gray-700">
                        @Model.WorkedStartTime.ToString("HH:mm") - @Model.WorkedEndTime?.ToString("HH:mm")
                    </p>
                </div>
            </div>
        </div>

        <div class="w-2/3">
            <form asp-action="Update" method="post" class="space-y-6">
                <div>
                    <label for="date" class="block text-sm font-medium text-gray-700">Datum</label>
                    <input id="date" name="Date" type="date"
                           class="w-full p-2 border border-gray-300 rounded focus:outline-none focus:ring-1 focus:ring-blue-500"
                           value="@Model.Date.ToString("yyyy-MM-dd")" readonly />
                </div>

                <div class="grid grid-cols-2 gap-4">
                    <div>
                        <label for="workedStartTime" class="block text-sm font-medium text-gray-700">Geklokte begintijd</label>
                        <input id="workedStartTime" name="WorkedStartTime" type="time"
                               class="w-full p-2 border border-gray-300 rounded focus:outline-none focus:ring-1 focus:ring-blue-500"
                               value="@Model.WorkedStartTime.ToString("HH:mm")" />
                    </div>
                    <div>
                        <label for="workedEndTime" class="block text-sm font-medium text-gray-700">Geklokte eindtijd</label>
                        <input id="workedEndTime" name="WorkedEndTime" type="time"
                               class="w-full p-2 border border-gray-300 rounded focus:outline-none focus:ring-1 focus:ring-blue-500"
                               value="@Model.WorkedEndTime?.ToString("HH:mm")" />
                    </div>
                </div>

                <div>
                    <input id="isSick" type="checkbox" name="IsSick" class="mr-2" value="true" @(Model.IsSick ? "checked" : "") />
                    <label for="isSick" class="text-sm font-medium text-gray-700">Was ziek</label>

                </div>



                <div class="flex justify-end">
                    <input type="hidden" id="employeeBID" name="EmployeeBID" value="@Model.EmployeeBID" />
                    <input type="hidden" id="employeeName" name="EmployeeName" value="@Model.EmployeeName" />

                    <default-button button-text="Aanpassen" button-type="primary" typeof="submit"></default-button>
                </div>
                <div asp-validation-summary="ModelOnly" class="text-red-500"></div>
            </form>
        </div>
    </div>
</div>
