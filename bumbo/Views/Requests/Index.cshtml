@using bumbo.ViewModels
@{

}

@model RequestsViewModel

<div class="flex h-screen">
    <!-- Filter -->
    <form asp-action="FilterType" method="post">
        <div class="bg-stone-100 min-w-56 max-w-56 p-8 h-full">
            <p class="mb-6 text-2xl"><strong>Filter</strong></p>
            <p class="mb-3 text-sm"><strong>Categorie</strong></p>
            <div class="mt-1 flex items-center">
                <input asp-for="SelectedType" type="radio" name="SelectedType"
                    value="Dienstenruil" 
                    class="w-3 h-3 bg-white border-gray-300 appearance-none rounded-full border-2 checked:bg-gray-300 checked:border-gray-400 focus:outline-none" />
                <label asp-for="SelectedType" class="ml-2 text-sm">Dienstenruil</label>
            </div>
            <div class="mt-1 flex items-center">
                <input asp-for="SelectedType" type="radio" name="SelectedType"
                    value="Calamiteiten" 
                    class="w-3 h-3 bg-white border-gray-300 appearance-none rounded-full border-2 checked:bg-gray-300 checked:border-gray-400 focus:outline-none" />
                <label asp-for="SelectedType" class="ml-2 text-sm">Calamiteiten</label>
            </div>
            <div class="mt-1 flex items-center">
                <input asp-for="SelectedType" type="radio" name="SelectedType"
                    value="Beschikbaarheid" 
                    class="w-3 h-3 bg-white border-gray-300 appearance-none rounded-full border-2 checked:bg-gray-300 checked:border-gray-400 focus:outline-none" />
                <label asp-for="SelectedType" class="ml-2 text-sm">Beschikbaarheid</label>
            </div>
            <div class="mt-1 flex items-center">
                <input asp-for="SelectedType" type="radio" name="SelectedType"
                    value="Afwezigheid"  
                    class="w-3 h-3 bg-white border-gray-300 appearance-none rounded-full border-2 checked:bg-gray-300 checked:border-gray-400 focus:outline-none" />
                <label asp-for="SelectedType" class="ml-2 text-sm">Afwezigheid</label>
            </div>
            <div class="mt-1 flex items-center">
                <input asp-for="SelectedType" type="radio" name="SelectedType"
                    value="Vakantie" 
                    class="w-3 h-3 bg-white border-gray-300 appearance-none rounded-full border-2 checked:bg-gray-300 checked:border-gray-400 focus:outline-none" />
                <label asp-for="SelectedType" class="ml-2 text-sm">Vakantie</label>
            </div>
            <div class="mt-1 flex items-center">
                <input asp-for="SelectedType" type="radio" name="SelectedType"
                    value="Alles" 
                    class="w-3 h-3 bg-white border-gray-300 appearance-none rounded-full border-2 checked:bg-gray-300 checked:border-gray-400 focus:outline-none" />
                <label asp-for="SelectedType" class="ml-2 text-sm">Alles</label>
            </div>

            <p class="my-3 text-sm"><strong>Status</strong></p>
            <div class="mb-6 flex items-center">
                @if (Model.ShowFinishedRequests)
                {
                    <input asp-for="ShowFinishedRequests" checked type="checkbox" class="w-7 h-5 bg-white border-gray-300 appearance-none rounded-md border-2 checked:bg-gray-300 checked:border-gray-400 focus:outline-none" />
                } else
                {
                    <input asp-for="ShowFinishedRequests" type="checkbox" class="w-7 h-5 bg-white border-gray-300 appearance-none rounded-md border-2 checked:bg-gray-300 checked:border-gray-400 focus:outline-none" />
                }
                <label class="ml-2 text-sm">Laat afgehandelde aanvragen zien</label>
            </div>
            <default-button button-text="Filter" button-type="secondary"></default-button>
        </div>
    </form>

    <!-- Requests -->
    @Html.Raw(ViewBag.HtmlTable)
</div>