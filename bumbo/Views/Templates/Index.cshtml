@{
    ViewData["Title"] = "Standaard templates";
}

<div class="container mx-auto p-8 max-w-6xl">
    <div class="p-8">
        <!-- Main section title -->
        <div class="flex justify-between items-center mb-6">
            <h1 class="text-3xl font-semibold">Standaard template</h1>
            <!-- "Nieuwe template" button -->
            <default-button button-text="Nieuwe template" button-type="primary" on-click="window.location.href='Templates/Create'"></default-button>
        </div>

        <!-- Template list -->
        <div>
            <!-- List of templates -->
            <ul class="mt-4 space-y-2">
                <!-- Single template row -->
                <li class="flex justify-between border-b py-2">
                    <span>Normale week</span>
                    <button class="text-gray-500 hover:text-gray-700">
                        Edit
                    </button>
                </li>

                <li class="flex justify-between border-b py-2">
                    <span>Kerst</span>
                    <button class="text-gray-500 hover:text-gray-700">
                        Edit
                    </button>
                </li>

                <!-- Repeat as necessary for other template rows -->
                <li class="flex justify-between border-b py-2">
                    <span>Vakantie</span>
                    <button class="text-gray-500 hover:text-gray-700">
                        Edit
                    </button>
                </li>

                <!-- Template 1 Rows -->
                <li class="flex justify-between border-b py-2">
                    <span>Template 1</span>
                    <button class="text-gray-500 hover:text-gray-700">
                        Edit
                    </button>
                </li>

                <!-- Add more list items as needed -->
            </ul>
        </div>
    </div>
</div>

