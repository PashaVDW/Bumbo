
<div class="min-h-24 max-h-24 bg-gray-100 p-4 px-12 flex items-center justify-between lg:px-24">
    <div class="flex items-center space-x-[30px] lg:space-x-[100px]">
        <a href="/">
            <div class="h-16 flex max-w-[80px] items-center justify-center">
                <img src="/media/bumbo-logo.png" alt="Logo" class="h-auto max-w-[80px]" />
            </div>
        </a>

        <div class="space-x-6 flex">
            @if (Model.IsBranchManager)
            {
            <div class="max-h-6 group relative">
                <div class="flex">
                    <p>Prognoses </p>
                    <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4 left-1 text-gray-500 relative top-[6px] transition-transform duration-300" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                        <polyline points="6 9 12 15 18 9"></polyline>
                    </svg>
                </div>
                <ul class="group-hover:block bg-gray-100 left-[-12px] absolute top-full z-50 hidden">
                    <li class="p-3 pt-6 border-b-2"><a href="/prognoses" class="hover:text-gray-600">Prognoses</a></li>
                    <li class="p-3 border-b-2"><a href="/normeringen" class="hover:text-gray-600">Normeringen</a></li>
                    <li class="p-3 border-b-2"><a href="/standaard-templates" class="hover:text-gray-600">Standaard template</a></li>
                </ul>
            </div>

            <div class="max-h-6 group relative hover:mr-1">
                <div class="flex">
                    <p>Medewerkers </p>
                    <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4 left-1 text-gray-500 relative top-[6px] transition-transform duration-300" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                        <polyline points="6 9 12 15 18 9"></polyline>
                    </svg>
                </div>
                <ul class="group-hover:block bg-gray-100 left-[-12px] absolute top-full z-50 hidden">
                    <li class="p-3 pt-6 border-b-2"><a href="/medewerkers" class="hover:text-gray-600">Medewerkers</a></li>
                    <li class="p-3 border-b-2"><a href="/verzoeken" class="hover:text-gray-600">Hulpverzoeken</a></li>
                </ul>
            </div>
            <div class="max-h-6 group relative hover:mr-1">
                <div class="flex">
                    <p>Uren </p>
                    <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4 left-1 text-gray-500 relative top-[6px] transition-transform duration-300" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                        <polyline points="6 9 12 15 18 9"></polyline>
                    </svg>
                </div>
                <ul class="group-hover:block bg-gray-100 left-[-12px] absolute top-full z-50 hidden">
                    <li class="p-3 pt-6 border-b-2"><a href="/roosterManager" class="hover:text-gray-600">Rooster</a></li>
                    <li class="p-3 pt-6 border-b-2"><a href="#" class="hover:text-gray-600">Klokken</a></li>
                    <li class="p-3 pt-6 border-b-2"><a href="#" class="hover:text-gray-600">Geregistreerde uren</a></li>
                </ul>
            </div>
                    
            }
            @if (Model.IsSystemManager)
            {
                <a href="/filialen" class="hover:text-gray-600">Filialen</a>
                <a asp-controller="LabourRules" asp-action="Index" class="hover:text-gray-600">CAO regels</a>
            }
        </div>
    </div>
    @if (Model.IsAuthenticated && !Model.IsBranchManager && !Model.IsSystemManager)
        { 
            <div class="max-md:fixed max-md:bottom-0 max-md:left-0 max-md:right-0 max-md:bg-white max-md:border-t max-md:border-gray-300 ">
                <div class="flex gap-6 justify-around p-2">
                    <div class="max-md:flex max-md:flex-col max-md:items-center">
                        <i class="fas fa-calendar-alt text-xl"></i>
                        <a asp-controller="EmployeeSchedule" asp-action="Index" class="max-md:text-xs">Rooster</a>
                    </div>
                    <div class="max-md:flex max-md:flex-col max-md:items-center ">
                    <i class="fas fa-user-clock text-xl"></i>
                        <a asp-controller="Availability" asp-action="Index" class="max-md:text-xs">Beschikbaarheid</a>
                    </div>
                    <div class="max-md:flex max-md:flex-col max-md:items-center ">
                        <i class="fas fa-clock text-xl"></i>
                        <a asp-controller="#" asp-action="Index" class="max-md:text-xs">Klokken</a>
                    </div>
                    <div class="max-md:flex max-md:flex-col max-md:items-center">
                        <i class="fas fa-exchange-alt text-xl"></i>
                        <a asp-controller="ShiftSwap" asp-action="Index" class="max-md:text-xs">Dienstuil</a>
                    </div>
                    <div class="max-md:flex max-md:flex-col max-md:items-center">
                        <i class="fas fa-school text-xl"></i>
                        <a asp-controller="SchoolSchedule" asp-action="Index" class="max-md:text-xs">Schoolrooster</a>
                    </div>
                </div>
            </div>
        }
    <div class="space-x-4 flex items-center">
        @if (Model.IsAuthenticated)
        { 
            <div class="text-right">
                <div class="text-gray-700">@Model.FirstName</div>
                @if (Model.IsBranchManager || Model.IsSystemManager)
                {
                    <div class="text-gray-500 text-sm">@Model.Email</div>
                }
            </div>
            <a href="/uitloggen" class="text-sm hover:text-gray-600">Uitloggen</a>
        }
        else
        {
            <a href="/inloggen" class="text-sm hover:text-gray-600">Inloggen</a>
        }
    </div>
</div>
