
@{
    ViewData["Title"] = "Create";
}

<div class="grid grid-cols-3 gap-4 mt-20 mx-auto max-w-screen-lg">
    <div class="flex items-center space-x-2" name="prognoses_title">
        <button class="text-2xl">&#10094;</button>
        <h1 class="font-bold text-3xl">Prognose Aanmaken</h1>
    </div>
</div>

<div class="mt-4 mx-auto max-w-screen-lg">
    <!-- Tweede rij met Weeknummer en knop boven de andere invoervelden -->
    <div class="flex items-center space-x-4 mb-4">
        <div class="flex flex-row flex-grow">
            <input disabled type="text" class="mt-1 p-2 border border-gray-300 rounded w-full" placeholder="Er is nog geen standaard template geimporteerd" />
            <button onclick="window.location.href='../prognosis/AddTemplate'" class="mt-6 p-2 bg-green-600 text-white rounded hover:bg-green-700">
                Importeer Standaard Template
            </button>
        </div>
    </div>

    <!-- Eerste rij met Week en Jaar -->
    <div class="flex items-center space-x-4">
        <div class="flex flex-col flex-grow">
            <label class="block text-sm font-medium text-gray-700">Week</label>
            <input type="text" value="12" class="mt-1 p-2 border border-gray-300 rounded w-full" disabled />
        </div>
        <div class="flex flex-col flex-grow">
            <label class="block text-sm font-medium text-gray-700">Jaar</label>
            <input type="text" value="2024" class="mt-1 p-2 border border-gray-300 rounded w-full" disabled />
        </div>
        <div class="flex flex-col">
            <button class="mt-6 p-2 bg-blue-600 text-white rounded hover:bg-blue-700">
                Importeer Vorige Week
            </button>
        </div>
    </div>
</div>

@using (Html.BeginForm("Create", "Prognosis"))
{
    <fieldset>
        <div class="mt-4 mx-auto max-w-screen-lg">
            <div class="grid grid-cols-3 gap-2">
                <div class="font-bold max-w-xs">Dag</div>
                <div class="font-bold max-w-xs">Aantal Benodigde Uren</div>
                <div class="font-bold max-w-xs">Aantal Benodigde Medewerkers</div>

                @for (int i = 0; i < 7; i++)
                {
                    <div class="max-w-xs">@ViewBag.days[i]</div>
                        @if (ViewBag.daysList != null && ViewBag.daysList.DaysList.Count > i)
                        {
                            <div>
                                <input type="number" value="@ViewBag.daysList.DaysList[i].CustomerAmount" class="border rounded p-1 w-full">
                            </div>
                            <div>
                            <input type="number" value="@ViewBag.daysList.DaysList[i].Packages" class="border rounded p-1 w-full">
                            </div>
                        }
                        else
                        {
                            <div>
                                <input type="number" class="border rounded p-1 w-full">
                            </div>
                            <div>
                                <input type="number" class="border rounded p-1 w-full">
                            </div>
                        }
                }

                 
            </div>
            <div class="mt-4 flex justify-end space-x-2">
                <button  type="submit" bg-red-500 text-white border border-red-700 rounded p-2 hover:bg-red-600 transition">Verwijderen</button>
                <button class="bg-blue-500 text-white border border-blue-700 rounded p-2 hover:bg-blue-600 transition">Bewerken</button>
            </div>

        </div>

    </fieldset>
}


